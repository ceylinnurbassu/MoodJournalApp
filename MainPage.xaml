<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MoodJournalApp.MainPage"
             Title="Mood Journal">

    <ScrollView>
        <VerticalStackLayout Padding="25" Spacing="20" BackgroundColor="#CBF4FFDE">

            <!-- Başlık -->
            <Frame BackgroundColor="#34F4FF2D" Padding="15" CornerRadius="12">
                <VerticalStackLayout Spacing="5" HorizontalOptions="Center">
                    <Label Text="Mood Journal"
                           FontSize="28"
                           FontAttributes="Bold"
                           TextColor="#FF0E4306" />
                
                </VerticalStackLayout>
            </Frame>

            <!-- Soru -->
            <Label Text="How are you feeling today?"
                   FontSize="18"
                   HorizontalOptions="Center"
                   TextColor="{StaticResource Gray900}" />
            <!-- Seçilen Duygu -->
            <Label x:Name="MoodLabel"
                   Text="Select your mood:"
                   FontSize="17"
                   HorizontalOptions="Center"
                   TextColor="{StaticResource Gray500}" />

            <!-- Emoji Butonları -->
            <HorizontalStackLayout HorizontalOptions="Center" Spacing="10">
                <Button Text="😊" FontSize="32" Clicked="OnMoodSelected" CommandParameter="Happy" />
                <Button Text="😐" FontSize="32" Clicked="OnMoodSelected" CommandParameter="Neutral" />
                <Button Text="😔" FontSize="32" Clicked="OnMoodSelected" CommandParameter="Sad" />
                <Button Text="😡" FontSize="32" Clicked="OnMoodSelected" CommandParameter="Angry" />
                <Button Text="😴" FontSize="32" Clicked="OnMoodSelected" CommandParameter="Tired" />
            </HorizontalStackLayout>

            

            <!-- Not Alanı -->
            <Editor x:Name="NoteEditor"
                    Placeholder="Write your thoughts..."
                    AutoSize="TextChanges"
                    HeightRequest="120"
                    BackgroundColor="{StaticResource NoteEnterenceColour}"
                    TextColor="{StaticResource Gray900}"
                    PlaceholderColor="{StaticResource Gray500}" />

            <!-- Kaydet Butonu -->
            <Button Text="Save Entry"
                    Clicked="OnSaveClicked"
                    WidthRequest="200"
                    BackgroundColor="{StaticResource Primary}"
                    TextColor="{StaticResource PrimaryDark}"
                    FontAttributes="Bold"
                    HorizontalOptions="Center" />

            <!-- Clear All (Command Binding) -->
            <Button Text="Clear All"
                    Command="{Binding ClearAllCommand}"
                    WidthRequest="200"
                    BackgroundColor="{StaticResource Gray300}"
                    TextColor="{StaticResource Gray900}"
                    FontAttributes="Bold"
                    HorizontalOptions="Center" />

            <!-- Kaydedilen Bilgi -->
            <Label x:Name="SavedNoteLabel"
                   Text=""
                   FontSize="14"
                   HorizontalOptions="Center"
                   TextColor="{StaticResource PrimaryDark}" />

            <!-- Son 7 Mood -->
            <Label Text="Last 7 Mood Entries"
                   FontAttributes="Bold"
                   FontSize="16"
                   TextColor="{StaticResource Gray900}" />

            <CollectionView x:Name="MoodList"
                HeightRequest="350"
                BackgroundColor="Transparent">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame Margin="5"
                        Padding="10"
                        BackgroundColor="{Binding MoodColor}"  
                        BorderColor="{StaticResource Gray300}"
                        CornerRadius="10"
                        HasShadow="True">
                        <Grid ColumnDefinitions="*,Auto" RowDefinitions="Auto,Auto">
                            <Label Grid.Row="0" Grid.Column="0"
                                Text="{Binding DisplayText}"
                                FontSize="14"
                                TextColor="{StaticResource Gray900}"
                                LineBreakMode="WordWrap" />
                            <Button Grid.Row="0" Grid.Column="1"
                                    Text="🗑️"
                                    Clicked="OnDeleteClicked"
                                    CommandParameter="{Binding}"
                                    BackgroundColor="Transparent"
                                    FontSize="14"
                                    TextColor="{StaticResource Gray500}" />
                        </Grid>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>


        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
